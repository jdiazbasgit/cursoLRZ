{
  "extends": ["next/core-web-vitals", "airbnb", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "max-len": ["error", { "code": 140 }],
    "quotes": [2, "single", { "avoidEscape": true }]
  }
}
